{{!-- views/books/book-edit.hbs --}}

<h2>Edit Book Details</h2>

<form action="/books/{{this._id}}/edit" method="post">
  <label> Title:
    <input type="text" name="title" value="{{this.tile}}"/>
  </label>

  <label> Author:
    <input type="text" name="author" value="{{this.author}}" />
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4">{{this.description}} </textarea>
  </label>

  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{this.rating}}"/>
  </label>

  <button type="submit"> Save Changes</button>
</form>